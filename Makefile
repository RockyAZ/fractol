NAME = fractol
FLAGS = -Wall -Wextra -Werror
SOURCE = main.c \
		draw.c \
		julia.c \
		mouse.c \
		helper.c \
		error.c \
		mandelbrot.c \
		keys.c \
		julia_3d.c \
		colors.c \
		burningship.c \
		making.c \

HEADER = fractol.h
OBJECTS = $(addprefix $(OBJDIR),$(SOURCE:.c=.o))
LIBFT = include/libft.a
OBJDIR = ./obj/

all: obj $(LIBFT) $(NAME)
	@printf "\033[0;32m.............::::::::::::::::::::::::::::::::::::::::::::::::\n\
